<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:title="@string/settings_profile_title">

    <EditTextPreference
        android:key="@string/account_name_key"
        android:title="@string/account_name_title"
        app:iconSpaceReserved="false"
        android:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true" />
    
    <EditTextPreference
        android:key="@string/account_email_key"
        android:title="@string/account_email_title"
        app:iconSpaceReserved="false"
        android:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:key="@string/account_phone_key"
        android:title="@string/account_phone_title"
        app:iconSpaceReserved="false"
        android:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true" />

    <Preference
        android:key="@string/settings_premium_key"
        android:layout="@layout/preference_premium"
        android:summary="@string/settings_buy_premium_summary"
        android:title="@string/settings_buy_premium_title"
        app:iconSpaceReserved="false"
        android:iconSpaceReserved="false"/>

</PreferenceScreen>