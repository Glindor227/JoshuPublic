<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- for bottom sheet dialog background -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:dropDownListViewStyle">@style/AppListViewDropDown</item>
        <item name="android:popupMenuStyle">@style/AppPopupMenuStyle</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/AppListViewDropDown</item>
        <item name="android:popupMenuStyle">@style/AppPopupMenuStyle</item>
        <!-- for bottom sheet dialog background -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:textColor">@color/color_3B4049</item>
    </style>

    <style name="TextStyleBNV" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_backdrop_white</item>
    </style>
    <style name="TextAppearance.MaterialCalendarWidget.JoshuLarge"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>
    <style name="TextAppearance.MaterialCalendarWidget.JoshuMedium"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textSize">24sp</item>
        <item name="android:colorControlNormal">@color/color_BDBDBD</item>
        <item name="android:textColorPrimary">@color/number_piker</item>
    </style>
    <style name="TimePickerTheme" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:textSize">26sp</item>
        <item name="android:numbersTextColor">@color/color_253CF1</item>
        <item name="android:numbersSelectorColor">@color/color_A7A7A7</item>
        <item name="android:numbersBackgroundColor">@color/color_F2C94C</item>
        <item name="android:headerBackground">@color/color_555555</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/black_10</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppListViewDropDown" parent="Widget.AppCompat.ListView.Menu">

    </style>
    <style name="AppPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="AppTheme.Widget.Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>